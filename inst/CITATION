year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version: %s", meta$Version)

bibentry( bibtype="Manual",
          title= "{vlad}: Variable Life Adjusted Display",
          author= c(person("Philipp", "Wittenberg"),
                    person("Sven", "Knoth")),
          year = year,
          note = note,
          url = "https://github.com/wittenberg/vlad",
          mheader="To cite package 'vlad' in publications use:",
          mfooter= "Please cite it when using it for data analysis or other tasks."
)
